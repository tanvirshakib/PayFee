<?xml version="1.0" encoding="utf-8"?>

<!-- Linear Layout with vertical orientation and other properties -->

<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ImageView for heading -->

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/logo"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"/>

            <!-- TextView for heading -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="20dp"
                android:text="Update Profile"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textColor="@color/purple_200"/>


            <!-- Edit text for id -->

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your ID">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idUpdate"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>
            <!-- Edit text for name -->



            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your Name"
                android:layout_marginTop="20dp">

                <com.google.android.material.textfield.TextInputEditText

                    android:id="@+id/nameUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>



            <!-- Edit text for Department -->



            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your Department"
                android:layout_marginTop="20dp">

                <com.google.android.material.textfield.TextInputEditText

                    android:id="@+id/departmentUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>
            <!-- Edit text for email -->


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your Email"
                android:layout_marginTop="20dp"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>


            <!-- Button for register with text "Register" -->
            <Button
                android:id="@+id/buttonUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Update"
                android:layout_marginTop="20dp"
                android:backgroundTint="@android:color/black"/>


            <!-- ProgressBar for loading time -->
            <ProgressBar
                android:id="@+id/progressBarRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
